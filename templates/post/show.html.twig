{% extends 'admin/index.html.twig' %}

{% block content %}
    <h1>{{ post.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('post_index') }}">back to list</a>

    <a class="btn btn-success" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}

{% endblock %}
