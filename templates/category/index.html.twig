{% extends 'admin/index.html.twig' %}

{% block content %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('category_new') }}">Create new</a>

    <div class="d-flex justify-content-center mb-5">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
